<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".MainActivity2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <Button
                android:id="@+id/back1"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                style="?android:buttonBarButtonStyle"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/baseline_arrow_back_24"
                android:paddingRight="42dp"
                android:text="Back"
                android:gravity="left"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="20sp"
                app:cornerRadius="20dp"/>

            <TextView
                android:id="@+id/logintext"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:text="Status"
                android:fontFamily="@font/intsafont"
                android:textAlignment="center"
                android:textColor="@color/purple"
                android:autoSizeTextType="uniform"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/plate_no"
                android:layout_width="305dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:drawablePadding="8dp"
                android:fontFamily="@font/block"
                android:padding="8dp"
                android:text="License Plate"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:autoSizeTextType="uniform"
                />


            <TextView
                android:id="@+id/approx_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:drawablePadding="8dp"
                android:fontFamily="@font/block"
                android:padding="8dp"
                android:text="Time Spent:"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/capproxcost"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:fontFamily="@font/block"
                android:autoSizeTextType="uniform"
                android:drawablePadding="8dp"
                android:text="Cost"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"/>

            <Button
                android:id="@+id/payment"
                style="?android:buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                android:drawableRight="@drawable/baseline_arrow_circle_right_24"
                android:paddingLeft="11dp"
                android:paddingRight="50dp"
                android:text="Proceed to payment"
                android:textAllCaps="false"
                android:textColor="@color/purple_700"
                android:autoSizeTextType="uniform"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/entry_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>